CREATE OR REPLACE WAREHOUSE RETAIL_WH
WITH
    WAREHOUSE_SIZE = 'XSMALL'
    AUTO_SUSPEND = 60
    AUTO_RESUME = TRUE;
USE WAREHOUSE RETAIL_WH;

CREATE OR REPLACE DATABASE RETAIL_DB;
USE DATABASE RETAIL_DB;

CREATE OR REPLACE SCHEMA SALES;
USE SCHEMA SALES;

CREATE OR REPLACE TABLE RETAIL_DB.SALES.SALES_TRANSACTIONS (
    ORDER_ID NUMBER,
    CUSTOMER_ID STRING,
    REGION STRING,
    PRODUCT_CATEGORY STRING,
    QUANTITY NUMBER,
    UNIT_PRICE NUMBER,
    TOTAL_AMOUNT NUMBER,
    ORDER_DATE DATE,
    LOAD_TIMESTAMP TIMESTAMP
);

DESC TABLE SALES_TRANSACTIONS;
SELECT * FROM RETAIL_DB.SALES.SALES_TRANSACTIONS;
